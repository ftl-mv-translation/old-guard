			<text>You create the turret base.</text>
			<item_modify>
				<item type="scrap" min="-40" max="-40" />
			</item_modify>
			<weapon name="OG_TURRET_BASE_LASER"/>
			<choice hidden="true">
				<text>Continue...</text>
				<event load="OG_CRAFT_MAIN_MENU_LOAD"/>
			</choice>
		</event>
	</choice>
	<choice hidden="false">
		<text>Construct a Ion Turret Base.</text>
