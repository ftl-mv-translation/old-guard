			<text>You create the turret base.</text>
			<item_modify>
				<item type="scrap" min="-40" max="-40" />
			</item_modify>
			<weapon name="OG_TURRET_BASE_ION"/>
			<choice hidden="true">
				<text>Continue...</text>
				<event load="OG_CRAFT_MAIN_MENU_LOAD"/>
			</choice>
		</event>
	</choice>
	<choice hidden="false">
		<text>Construct a Missile Turret Base.</text>
		<event>
			<text>You create the turret base.</text>
			<item_modify>
				<item type="scrap" min="-40" max="-40" />
			</item_modify>
			<weapon name="OG_TURRET_BASE_MISSILE"/>
			<choice hidden="true">
				<text>Continue...</text>
				<event load="OG_CRAFT_MAIN_MENU_LOAD"/>
			</choice>
		</event>
	</choice>
	<choice hidden="false">
		<text>Construct a Focus Turret Base.</text>
		<event>
			<text>You create the turret base.</text>
			<item_modify>
				<item type="scrap" min="-40" max="-40" />
			</item_modify>
			<weapon name="OG_TURRET_BASE_FOCUS"/>
			<choice hidden="true">
				<text>Continue...</text>
				<event load="OG_CRAFT_MAIN_MENU_LOAD"/>
			</choice>
		</event>
	</choice>
	<choice hidden="false">
		<text>Construct a Micro Turret Base.</text>
		<event>
			<text>You create the turret base.</text>
			<item_modify>
				<item type="scrap" min="-30" max="-30" />
