		<function name="UPG_OG_TURRET_ROTATION" value="1" useForReqs="true" warning="false"/>
		<icon>icon_og_rotation</icon>
	</mod-append:aug>
	<mod-append:aug name="EX_OG_TURRET_ROTATION">
		<function name="UPG_OG_TURRET_ROTATION" value="0.5" useForReqs="true" warning="false"/>
	</mod-append:aug>
	<mod-append:aug name="EX_OG_TURRET_SPEED">
