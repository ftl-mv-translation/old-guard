<mod:findLike type="ships" limit="1" reverse="false">
	<mod:findLike type="shipIcons">
		<mod-append:shipIcon>
			<name>icon_og_rotation</name>
			<tooltip>OVERCLOCKED MOTORS:
Enemy Turrets rotate 100% faster.</tooltip>
		</mod-append:shipIcon>
		<mod-append:shipIcon>
			<name>icon_og_reflective_plating</name>
			<tooltip>REFLECTIVE PLATING:
Halves the damage of beams hitting this ship, rounding down.</tooltip>
		</mod-append:shipIcon>
		<mod-append:shipIcon>
			<name>icon_og_turret_preignite</name>
			<tooltip>TURRET PRE-IGNITER:
This enemy's turrets will be fully charged at the start of combat.</tooltip>
		</mod-append:shipIcon>
	</mod:findLike>
	<mod:findLike type="shipOrder">
		<mod-append:ship>PLAYER_SHIP_OG_RAIDER</mod-append:ship>
		<mod-append:ship>PLAYER_SHIP_OG_EXECUTOR</mod-append:ship>
		<mod-append:empty/>
		<mod-append:empty/>
		
		<mod-append:empty/>
		<mod-append:empty/>
		<mod-append:empty/>
		<mod-append:empty/>

		<mod-append:empty/>
		<mod-append:empty/>
	</mod:findLike>

	<mod-append:ship name="PLAYER_SHIP_OG_RAIDER" b="true" c="true" >
		<arrow variant="a" direction="right" tooltip="ship_unlock_og_two_wins" image="arrow_v_right.png" unlockedImage="arrow_v_right_on.png">PLAYER_SHIP_OG_EXECUTOR</arrow>
		<unlock variant="b" silent="false">
			<type>1</type>
			<shipReq>PLAYER_SHIP_OG_RAIDER</shipReq>
			<value>8</value>
		</unlock>
		<unlock variant="c" silent="false">
			<type>4</type>
		</unlock>
		<achievement name="SHIP_ACH_OG_RAIDER_1" layout="all">
			<name>War Economy</name>
			<description>As a Raider-Class vessel, create a new turret of your own.</description>
			<icon>ogp_raider_1_icon</icon>
			<lockImage>ogp_raider_1_icon_locked</lockImage>
		</achievement>
		<achievement name="SHIP_ACH_OG_RAIDER_2" layout="all">
			<name>Treading on the Rattlesnake</name>
			<description>Defeat a New Dawn ship using a Raider-Class vessel.</description>
			<icon>ogp_raider_2_icon</icon>
			<lockImage>ogp_raider_2_icon_locked</lockImage>
		</achievement>
		<achievement name="SHIP_ACH_OG_RAIDER_3" layout="all">
			<name>Heavy Lifting</name>
			<description>As a Raider Class Vessel: Reach Sector 8 without buying weapons or shields' systems (or upgrading them as ship starting systems).</description>
			<icon>ogp_raider_3_icon</icon>
			<lockImage>ogp_raider_3_icon_locked</lockImage>
		</achievement>
	</mod-append:ship>
	<mod-append:customShip name="PLAYER_SHIP_OG_RAIDER">
		<hiddenAug>SHIP_OG_GUARD</hiddenAug>
		<hiddenAug>FOR_MULTIVERSE</hiddenAug>
		<crewLimit>8</crewLimit>
		<systemLimit>8</systemLimit>
	</mod-append:customShip>
	<mod-append:customShip name="PLAYER_SHIP_OG_RAIDER_2">
