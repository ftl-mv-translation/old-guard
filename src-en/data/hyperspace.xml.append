	<mod-append:ship name="PLAYER_SHIP_OG_EXECUTOR" b="false" c="false" >
		<unlock variant="a">
			<type>2</type>
			<shipReq>PLAYER_SHIP_OG_RAIDER_2</shipReq>
			<shipReq>PLAYER_SHIP_OG_RAIDER_3</shipReq>
		</unlock>
		<unlock variant="a">
			<type>2</type>
			<shipReq>PLAYER_SHIP_OG_RAIDER</shipReq>
			<shipReq>PLAYER_SHIP_OG_RAIDER_3</shipReq>
		</unlock>
		<unlock variant="a">
			<type>2</type>
			<shipReq>PLAYER_SHIP_OG_RAIDER</shipReq>
			<shipReq>PLAYER_SHIP_OG_RAIDER_2</shipReq>
		</unlock>
	</mod-append:ship>
	<mod-append:customShip name="PLAYER_SHIP_OG_EXECUTOR">
		<hiddenAug>SHIP_OG_GUARD</hiddenAug>
		<hiddenAug>FOR_MULTIVERSE</hiddenAug>
		<crewLimit>11</crewLimit>
		<systemLimit>10</systemLimit>
	</mod-append:customShip>

</mod:findLike>

